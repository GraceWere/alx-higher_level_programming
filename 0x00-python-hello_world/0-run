#!/bin/bash
# This script runs a Python script whose filename is stored in the environment variable $PYFILE

# Check if $PYFILE is set
if [ -z "$PYFILE" ]; then
    echo "Error: PYFILE environment variable is not set."
    exit 1
fi

# Check if the specified file exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: $PYFILE does not exist."
    exit 1
fi

# Execute the Python script
python3 "$PYFILE"

